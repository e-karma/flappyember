{{#page-header}}
  <h1 class="pull-left">Select a Theme</h1>
{{/page-header}}
{{#page-body}}
<div class="container">
  <div class="box">
    <div class="box-content">
      <div class="gallery">
        <ul class="list-unstyled list-inline">
          {{#each theme in model}}
            <li>
              {{#link-to 'pages.new' theme class="link-text-color"}}
                <div class="picture">
                  <div class="actions">
                    <div class="pull-left">
                      <small>
                        <i class="icon-user"></i>
                      </small>
                      {{theme.displayName}}
                    </div>
                  </div>
                  <img {{bind-attr src=theme.thumbnailUrl}} class="image-resize" />
                </div>
              {{/link-to}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
{{/page-body}}
